<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="list.am">

    <test name="Check last item clickable functionality">
        <classes>
            <class name="LastItemFunctionality_Test"/>
        </classes>
    </test>

    <test name="Check pages filter functionality">
        <classes>
            <class name="ApartmentsFilterFunctionality_Test"/>
            <class name="NotebooksFilterFunctionality_Test"/>
        </classes>
    </test>

    <test name="Rest assured API">
        <groups>
            <run>
                <include name="get_body"/>
                <include name="get_status"/>
                <include name="get_headers"/>
                <include name="get_time"/>
                <include name="get_content type"/>
                <include name="get_all"/>
            </run>
        </groups>
        <classes>
            <class name="rest_assured_api.GetApiExamples"/>
            <class name="rest_assured_api.RestAssuredApiExamples"/>
            <class name="rest_assured_api.RestTest"/>
        </classes>
    </test>

</suite>